<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Arrivals</title>
  <link href="/css/styles.css" rel="stylesheet" type="text/css">
</head>
<body>
<header>
  <div class="header_container">
    <div class="logo">
      <img src="/images/logo_main.png" alt="Logo">
    </div>
    <div class="search-box">
      <span>Flight.No</span>
      <form action="/search" method="GET">
        <input type="text"  id="query" name="query" placeholder="Search">
        <button type="submit">Search</button>
      </form>
      <form action="/" method="GET">
        <button class="button-2" type="submit">Login</button>
      </form>
    </div>
  </div>
</header>
<nav>
  <div class="header_container">
    <a href="http://localhost:3000/">Home</a>
    <a href="http://localhost:3000/database1"><div class="highlight">Arrival</div></a>
    <a href="http://localhost:3000/database2">Departure</a>
    <a href="#">Cargo</a>
  </div>
</nav>
<div class="background"><img src="/images/arrival_background.jpg" height="950" width="1600" alt="arrival_background"></div>
<div class="container">
  <div class="content">
    <ul class="data-list">
        <% data.forEach(item => { %>
            <li class="data-item">
                <div class="item-title">Flight Number: <%= item.flightNumber %></div>
                <div class="item-info">
                    <p>Origin: <%= item.origin %></p>
                    <p>Airline: <%= item.airline %></p>
                    <p>Status: <%= item.status %></p>
                    <p>Date: <%= item['date'] %></p>
                    <% if (item.status == "Landed") { %>
                      <p>Arrival Time: <%= item['estimated Arrival Time'] %></p>
                    <% } %>
                    <% if (item.status !== "Landed") { %>
                    <p>Scheduled Arrival Time: <%= item['arrival Time'] %></p>
                    <p>Estimated Arrival Time: <%= item['estimated Arrival Time'] %></p>
                    <% } %>
                    <p>Terminal: <%= item.terminal %></p>
                    <p>Gate: <%= item.gate %></p>
                    <p>Baggage Claim: Belt <%= item['baggage Claim Belt'] %></p>
                    <p>Remarks: <%= item.remarks %></p>
                </div>
            </li>
        <% }); %>
    </ul>
</div>
</div>
</body>
</html>